<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_edt_user"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Login ICS"
            android:textSize="20dp"
            android:visibility="visible"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/conta_user"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_horizontal"
            android:text="Seu usuário"
            android:textSize="22sp"
            android:inputType="text"
            android:focusable="false"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/conta_pass"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_horizontal"
            android:hint="Edite sua senha"
            android:textSize="22sp"
            android:inputType="text"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/conta_pass2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_horizontal"
            android:hint="Confirme sua senha"
            android:textSize="22sp"
            android:inputType="text"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_cad_confirma"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="confirmar"
            android:textSize="20dp"
            android:visibility="gone"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/btn_edt_fatura"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Faturamento"
            android:textSize="20dp"
            android:layout_marginBottom="20dp"
            android:visibility="visible"/>

        <EditText
            android:id="@+id/conta_cep"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="CEP de Coleta"
            android:inputType="number"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_conta_cep"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dp"
            android:text="Valida cep"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/linha1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <EditText
                android:id="@+id/conta_rua"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Rua"
                android:inputType="text" />

            <EditText
                android:id="@+id/conta_numero"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Número"
                android:inputType="number" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linha2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <EditText
                android:id="@+id/conta_complemento"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Complemento"
                android:inputType="text" />

            <EditText
                android:id="@+id/conta_bairro"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Bairro"
                android:inputType="text" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linha3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <EditText
                android:id="@+id/conta_cidade"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:hint="Cidade"
                android:inputType="text" />

            <Spinner
                android:id="@+id/conta_estado"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_confirma_fat"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="confirmar"
            android:textSize="20dp"
            android:visibility="gone"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">
        <Button
            android:id="@+id/btn_zerar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="cancelar"
            android:textSize="20dp"
            android:visibility="visible"
            android:gravity="center"
            android:layout_marginLeft="55dp"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>



</RelativeLayout>